<sql id="Page_DTO">
		<trim prefix="(" suffix=") and" prefixOverrides="and">
			<foreach item='type' collection="typeArr">
				<trim prefix="and">
					<choose>
						<when test="type == '육상'.toString()">
							pr_type like '%'||'육상'||'%'
						</when>
						<when test="type == '자전거'.toString()">
							pr_type like '%'||'자전거'||'%'
						</when>
