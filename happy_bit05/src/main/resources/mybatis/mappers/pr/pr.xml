		</trim>
	</sql>

<select id="pr_list" resultType="vs.pr.pr_002_1.vo.Pr_002_1VO" parameterType="String">

	<![CDATA[ 
		select pr_index, pr_title, pr_text, pr_see, pr_good, 
				pr_resistDate, pr_recordDate, pr_record, pr_type, pr_public
	 from(
		select rownum rn, a.*
		from
		        (
			        select pr_index, pr_title, pr_text, pr_see, pr_good, 
						pr_resistDate, pr_recordDate, pr_record, pr_type, pr_public
			        from myrecord
			        where 
			        ]]>
			        	 <include refid="Page_DTO"/>
			        <![CDATA[ 
			        pr_index > '0'
			        and pr_public = '게시'
			        order by to_number(substr(pr_index, 4)) desc
		        )a
		where rownum <= (#{page} * #{amount})
		)
	where rn > ((#{page}-1) * #{amount})
	]]>		        	 

</select>


<!-- 게시물 총합 출력 쿼리 -->
	<select id="get_total" resultType="int">
		select count(pr_index)
		 from myrecord 
	

	</select>


<!-- 평균차트 -->
<select id="chart_list" resultType="vs.pr.pr_002_1.vo.Pr_002_1VO">
<![CDATA[
	select distinct
	    (select round(avg(pr_record),2) from myrecord 
	        where mp_index = '5'
	        ) as a
	    from myrecord
]]>	
</select>


<!-- 개인기록 상세보기 -->
<select id="pr_detail" resultType="vs.pr.pr_002_1.vo.Pr_002_1VO" parameterType="String">

	select *
	 from myrecord r, member m 
	 where pr_index = #{pr_index}
	and r.m_index = m.m_index


</select>







